<header>
    <h1>Club Veles</h1>

    <div class="header-links">
        <% if (!currentUser) { %>
            <a href="/" class="<%= activePath === '/' ? 'active' : '' %>">Home</a>
            <a href="/login" class="<%= activePath.startsWith('/login') ? 'active' : '' %>">Login</a>
            <a href="/register" class="<%= activePath.startsWith('/register') ? 'active' : '' %>">Register</a>

            <% } else { %>

                <% if (currentUser && !currentUser.is_member) { %>
                    <a href="/" class="<%= activePath === '/' ? 'active' : '' %>">Home</a>
                    <a href="/messages/new" class="<%= activePath.startsWith('/messages/new') ? 'active' : '' %>">New
                        Post</a>
                    <a href="/club" class="<%= activePath.startsWith('/club') ? 'active' : '' %>">Join?</a>
                    <a href="/logout" class="<%= activePath.startsWith('/logout') ? 'active' : '' %>">Logout</a>

                    <% } else if (currentUser && currentUser.is_member) { %>
                        <a href="/" class="<%= activePath === '/' ? 'active' : '' %>">Home</a>
                        <a href="/messages/new"
                            class="<%= activePath.startsWith('/messages/new') ? 'active' : '' %>">New Post</a>
                        <a href="/logout" class="<%= activePath.startsWith('/logout') ? 'active' : '' %>">Logout</a>
                        <% } %>

                            <% } %>
    </div>
</header>