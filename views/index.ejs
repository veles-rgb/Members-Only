<head>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include("partials/header") %>
        <div id="index-container">
            <% if (currentUser) { %>
                <p>Welcome <%= currentUser.username %>
                </p>
                <% } else { %>
                    <p>Please <a href="/login">Login</a></p>
                    <% } %>
                        <div id="messages-container">
                            <% messages.forEach(message=> { %>
                                <div class="messages-item">
                                    <div>
                                        <%= message.title %>
                                    </div>
                                    <div>
                                        <%= message.message %>
                                    </div>
                                    <div>
                                        <div>
                                            <% if (currentUser && currentUser.is_member) { %>
                                                <%= message.username %>
                                                    <% } else { %>
                                                        ****
                                                        <% } %>
                                        </div>
                                        <div>
                                            <% if (currentUser && currentUser.is_member) { %>
                                                <%= message.timestamp %>
                                                    <% } else { %>
                                                        ****
                                                        <% } %>
                                        </div>
                                    </div>
                                    <button onclick="window.location.href='/messages/<%=message.id%>'">View</button>
                                </div>
                                <br>
                                <% }) %>
                        </div>
        </div>
</body>